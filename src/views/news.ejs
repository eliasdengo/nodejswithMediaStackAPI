<!DOCTYPE html>
<html lang="en">
<head>

    <title>NEWS</title>
    <style>
        .news__newsBox img {
  aspect-ratio: 16 / 9; /* Assuming most of your images are landscape */
  object-fit: cover;
  max-width: 200px; /* Optional maximum width if needed */
}
        .news__newsBox {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  padding: 15px;
}

.news__newsBox img {
  width: 100%;
  height: auto;
  max-height: 150px;
  object-fit: cover;
  margin-bottom: 10px;
}

.news__newsBox h3 {
  font-size: 18px;
  margin-bottom: 5px;
}

.news__newsBox p {
  font-size: 16px;
  line-height: 1.5;
  margin-bottom: 5px;
}

/* Additional styling for a cleaner look */
.news__newsBox:hover {
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
}

.news__newsBox a {
  text-decoration: none;
  color: #000;
}

.news__newsBox a:hover {
  color: #333;
}

/* Category and source styling */
.news__newsBox p:nth-child(3) {
  font-weight: bold;
}

.news__newsBox p:nth-child(4) {
  font-style: italic;
}
    </style>
   </head>
<body>
   <div class="news">
      <% if (articles != null) { %>
         <% for (const article of articles) { %>
            <a href="<%- article.url %>" class="news__newsBox" target="_blank">
               <% if (article.image != null) { %>
                  <img src="<%- article.image %>" alt="<%- article.title %>">
               <% } else { %>
                  <img src="https://mediastack.com/site_images/mediastack_logo_footer.svg" alt="default image">
               <% } %>
               <h3><%- article.title || article.name %></h3>
               <p><%- article.description %></p>
               <p>Category: <%- article.category.toUpperCase() %></p>
               <p>Source: <%- article.source %></p>
            </a>
         <% } %>; <% } else { %>
         <p>No posts found</p>
      <% } %>
   </div>
   </body>
</html>